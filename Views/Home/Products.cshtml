<link rel="stylesheet" href="~/css/style.css">
@model Product
<div class="text-center">
    <h1 class="display-5" style="display:inline-block; margin:0px 15px">Products</h1>
    <h1 class="display-5" style="display:inline-block;">|</h1>
    <h1 class="display-5" style="display:inline-block; margin:0px 15px"><a href="/categories">Categories</a></h1>
</div>

<div class="main">
    <div class="new text-center">
        <h2 class="display-5">New Product</h2>
        <hr>
        <form method="post" asp-action="addProduct" controller="Home">
            <label asp-for="name"></label><br>
            <span class="error" asp-validation-for="name"></span>
            <input class="form-control" type="text" name="name"><br>
            <label asp-for="description"></label><br>
            <span class="error" asp-validation-for="description"></span>
            <input class="form-control" type="text" name="description"><br>
            <label asp-for="price"></label><br>
            <span class="error" asp-validation-for="price"></span>
            <input class="form-control" type="text"name="price"><br>
            <button class="btn btn-primary">Add new Product</button>
        </form>
    </div>
    <div class="existing text-center">
        <h2 class="display-5">Existing Products</h2>
        <hr>
        <div class="text-center">
            @foreach(var product in ViewBag.products){
                <p><a href="products/@product.product_id">@product.name</a></p>
            }

        </div>
    </div>
</div>