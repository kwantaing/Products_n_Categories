<link rel="stylesheet" href="~/css/style.css">
<div class="text-center">
    <h1 class="display-5" style="display:inline-block; margin:0px 15px"><a href="/products">Products</a></h1>
    <h1 class="display-5" style="display:inline-block;">|</h1>
    <h1 class="display-5" style="display:inline-block; margin:0px 15px">Categories</h1>
</div>
@model Category
<div class="main">
    <div class="new text-center">
        <h2 class="display-5">New Category</h2>
        <hr>
        <form class="newCategory" method="post" asp-action="addCategory" controller="Home">
            <label asp-for="name"></label>
            <span class="error" asp-validation-for="name"></span>
            <input class="form-control" type="text" name="name"><br>
            <button class="btn btn-primary">Add new Category</button>
        </form>
    </div>
    <div class="existing text-center">
        <h2 class="display-5">Existing Categories</h2>
        <hr>
        <div class="text-center">
            @foreach(var category in ViewBag.categories){
                <p><a href="/categories/@category.category_id">@category.name</a></p>
            }

        </div>
    </div>
</div>
